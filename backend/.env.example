# AICap Configuration

# Development mode (enables localhost CORS for Vite dev server)
# AICAP_DEV_MODE=true

# Logging
LOG_LEVEL=INFO
# LOG_FORMAT=json  # Use "json" for production structured logging, "text" for development

# Server
API_HOST=127.0.0.1
API_PORT=1455

# OAuth Configuration (optional - defaults to public Codex CLI client)
# OPENAI_CLIENT_ID=your_client_id
# OPENAI_REDIRECT_URI=http://localhost:1455/auth/callback

# Codex Model (can be updated if API changes)
# CODEX_MODEL_NAME=gpt-5.1-codex

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Auth Rate Limiting (stricter)
AUTH_RATE_LIMIT_REQUESTS=5
AUTH_RATE_LIMIT_WINDOW=60

# OAuth State Expiration (seconds)
OAUTH_STATE_EXPIRATION=600

# Update interval (minutes)
UPDATE_INTERVAL_MINUTES=5
