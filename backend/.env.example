# AICap Configuration

# Development mode (enables localhost CORS for Vite dev server)
# WARNING: Only use for development - weakens CORS security
# AICAP_DEV_MODE=true

# API Authentication
# AICAP_API_TOKEN=your_random_token_here  # Required when binding to non-loopback addresses
# AICAP_API_TOKEN_FILE=/path/to/token/file  # Managed automatically by desktop app; for advanced use only

# Logging
LOG_LEVEL=INFO
# LOG_FORMAT=json  # Use "json" for production structured logging, "text" for development

# Server
API_HOST=127.0.0.1
API_PORT=1455

# OpenAI OAuth Configuration (optional - defaults to public Codex CLI client)
# OPENAI_CLIENT_ID=your_client_id
# OPENAI_REDIRECT_URI=http://localhost:1455/auth/callback

# Google Antigravity OAuth Configuration (REQUIRED for Antigravity provider)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:1455/auth/callback

# Codex Model (can be updated if API changes)
# CODEX_MODEL_NAME=gpt-5.1-codex

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Auth Rate Limiting (stricter)
AUTH_RATE_LIMIT_REQUESTS=5
AUTH_RATE_LIMIT_WINDOW=60

# OAuth State Expiration (seconds)
OAUTH_STATE_EXPIRATION=600

# Update interval (minutes)
UPDATE_INTERVAL_MINUTES=5
